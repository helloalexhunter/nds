---
import "../styles/global.css";
const { title = "National Debt Service" } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="generator" content={Astro.generator} />

    <!-- Noto Sans Display & Noto Sans -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link
      rel="preconnect"
      href="https://fonts.gstatic.com"
      crossorigin
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Noto+Sans:wght@300;400;500;600;700&family=Noto+Sans+Display:wght@500;600;700&display=swap"
      rel="stylesheet"
    />
  </head>

  <body class="min-h-screen bg-slate-50 text-slate-900 flex flex-col">
    <slot />
    <slot name="footer" />
  </body>
</html>
