---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const {
  title = 'National Debt Service',
  description = 'Find free, regulated debt advice and mental health support services across the UK. Simple, independent signposting.',
  canonicalUrl,
} = Astro.props;

const siteName = 'National Debt Service';
const siteUrl = 'https://www.nationaldebtservice.co.uk';
---

<!doctype html>
<html lang="en-GB">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, viewport-fit=cover"
    />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="language" content="en-GB" />
    <meta name="referrer" content="strict-origin-when-cross-origin" />

    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <meta name="theme-color" content="#023047" />
    <meta name="color-scheme" content="light" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="robots" content="index,follow" />

    {canonicalUrl && <link rel="canonical" href={canonicalUrl} />}

    <meta property="og:type" content="website" />
    <meta property="og:site_name" content={siteName} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalUrl || siteUrl} />
    <meta property="og:locale" content="en_GB" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
  </head>

  <body class="min-h-screen bg-neutral-soft text-dark-text antialiased">
    <div
      class="bg-red-100 border-b-4 border-red-500 py-3 px-4 text-center shadow-lg"
    >
      <p class="text-sm text-red-900 font-bold max-w-4xl mx-auto tracking-wide">
        IMPORTANT: We do not give debt advice. We signpost to free, regulated UK
        services.
      </p>
    </div>

    <Header />

    <button
      id="quick-exit-button"
      class="fixed z-[9999] bg-red-700 text-white uppercase font-black shadow-2xl hover:bg-red-800 transition-colors border-4 border-amber-400 leading-snug tracking-wider
        
        /* MOBILE STYLES (Default - at the very bottom) */
        bottom-0 left-1/2 -translate-x-1/2 max-w-xs w-full
        text-center text-sm py-3 rounded-t-xl
        
        /* DESKTOP STYLES (md: prefix - top right corner, pushed slightly further away) */
        md:w-auto md:max-w-none
        md:top-5 md:right-5 md:bottom-auto md:left-auto md:translate-x-0
        md:text-lg md:py-2 md:px-5 md:rounded-lg"
      aria-label="Quickly escape this website. Tap/Click or press Escape key"
    >
      <span class="text-sm">ðŸš¨ ESCAPE THIS WEBSITE ðŸš¨</span>
      <br />
      <span class="font-bold text-white text-xs block mt-0.5">
        (Tap/Click or press 'Escape' key)
      </span>
    </button>

    <slot />

    <Footer />

    <script is:inline>
      if (typeof window !== 'undefined') {
        const safeUrl = 'https://www.google.co.uk/';
        const exitButton = document.getElementById('quick-exit-button');

        if (exitButton) {
          const quickExit = (event) => {
            if (event) event.preventDefault();
            window.location.replace(safeUrl);
          };
          exitButton.addEventListener('click', quickExit);

          document.addEventListener('keydown', function (event) {
            if (event.key === 'Escape') {
              event.preventDefault();
              event.stopPropagation();
              quickExit();
            }
          });
        }
      }
    </script>
  </body>
</html>
