---
// src/layouts/BaseLayout.astro
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { LogOut } from 'lucide-astro';

const {
  title = 'National Debt Service',
  description = 'Find free, regulated debt advice and mental health support services across the UK. Simple, independent signposting.',
  image = '/images/social-share-default.jpg',
  canonicalUrl,
} = Astro.props;

const siteName = 'National Debt Service';
const siteUrl = 'https://www.nationaldebtservice.co.uk';
const socialImageURL = new URL(image, siteUrl).href;
---

<!doctype html>
<html lang="en-GB">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, viewport-fit=cover"
    />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="language" content="en-GB" />
    <meta name="referrer" content="strict-origin-when-cross-origin" />

    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <meta name="theme-color" content="#b91c1c" />
    <meta name="color-scheme" content="light" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="robots" content="index,follow" />

    {canonicalUrl && <link rel="canonical" href={canonicalUrl} />}

    <meta property="og:type" content="website" />
    <meta property="og:site_name" content={siteName} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalUrl || siteUrl} />
    <meta property="og:locale" content="en_GB" />
    <meta property="og:image" content={socialImageURL} />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={socialImageURL} />
  </head>

  <body
    class="min-h-screen bg-neutral-soft text-dark-text antialiased flex flex-col"
  >
    <div
      class="sticky top-0 z-[100] bg-red-700 text-white shadow-md flex items-center justify-center h-12 relative px-4"
    >
      <button
        id="quick-exit-btn"
        class="bg-white text-red-700 hover:bg-red-50 font-bold text-xs uppercase tracking-wider py-1.5 px-6 rounded-full transition-colors flex items-center gap-2 shadow-sm border border-transparent focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-red-700 focus:ring-white"
        aria-label="Quickly escape this website"
      >
        <span>Exit Site</span>
        <LogOut class="w-4 h-4" aria-hidden="true" />
      </button>
    </div>

    <Header />

    <main class="flex-grow">
      <slot />
    </main>

    <Footer />

    <script is:inline>
      if (typeof window !== 'undefined') {
        const safeUrl = 'https://www.google.co.uk/';
        const exitButton = document.getElementById('quick-exit-btn');

        if (exitButton) {
          const quickExit = (event) => {
            if (event) event.preventDefault();
            window.location.replace(safeUrl);
          };
          exitButton.addEventListener('click', quickExit);

          document.addEventListener('keydown', function (event) {
            if (event.key === 'Escape') {
              event.preventDefault();
              event.stopPropagation();
              quickExit();
            }
          });
        }
      }
    </script>
  </body>
</html>
