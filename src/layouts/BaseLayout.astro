---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const {
  title = "National Debt Service",
  description = "Independent signposting to free, regulated debt advice and mental health support in the UK.",
  canonicalUrl,
} = Astro.props;


const siteName = "National Debt Service";
const siteUrl = "https://www.nationaldebtservice.co.uk";
---

<!DOCTYPE html>
<html lang="en-GB">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, viewport-fit=cover"
    />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="language" content="en-GB" />
    <meta name="referrer" content="strict-origin-when-cross-origin" />

    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <meta name="theme-color" content="#023047" />
    <meta name="color-scheme" content="light" />
    <meta name="robots" content="index,follow" />

    {description && <meta name="description" content={description} />}

    {canonicalUrl && <link rel="canonical" href={canonicalUrl} />}

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content={siteName} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalUrl || siteUrl} />
    <meta property="og:locale" content="en_GB" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
  </head>

  <body class="min-h-screen bg-neutral-soft text-dark-text antialiased">
    <!-- Site Notice Banner -->
        <div
          id="site-notice-banner"
          class="w-full bg-amber-100 border-b border-amber-300 text-slate-900 px-4 py-3 text-sm font-medium flex items-start justify-between gap-4"
          role="status"
          aria-label="Important site information"
        >
          <p class="max-w-4xl leading-relaxed">
            <strong>Important:</strong> NationalDebtService.co.uk is now under new ownership.  
            Previous operators of this domain were reprimanded by the Advertising Standards Authority (ASA) for misleading users.  
            We are <strong>not connected to the former organisation</strong>.  
            This version of the site provides clear, unbiased signposting only; no advertising, no sales, and no debt advice.
          </p>

          <button
            type="button"
            aria-label="Dismiss this notice"
            class="flex-shrink-0 text-slate-700 hover:text-slate-900 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-primary-500 rounded"
            onclick="document.getElementById('site-notice-banner').remove()"
          >
            âœ•
          </button>
        </div>
    <Header />
    <slot />
    <Footer />
  </body>
</html>
