---
// src/layouts/BaseLayout.astro
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const {
  title = 'National Debt Service',
  description = 'Find free, regulated debt advice and mental health support services across the UK. Simple, independent signposting.',
  image = '/images/social-share-default.jpg',
  canonicalUrl,
} = Astro.props;

const siteName = 'National Debt Service';
const siteUrl = 'https://www.nationaldebtservice.co.uk';
const socialImageURL = new URL(image, siteUrl).href;
---

<!doctype html>
<html lang="en-GB">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, viewport-fit=cover"
    />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="language" content="en-GB" />
    <meta name="referrer" content="strict-origin-when-cross-origin" />

    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <meta name="theme-color" content="#023047" />
    <meta name="color-scheme" content="light" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="robots" content="index,follow" />

    {canonicalUrl && <link rel="canonical" href={canonicalUrl} />}

    {/* --- OPEN GRAPH --- */}
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content={siteName} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalUrl || siteUrl} />
    <meta property="og:locale" content="en_GB" />
    <meta property="og:image" content={socialImageURL} />

    {/* --- TWITTER --- */}
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={socialImageURL} />
  </head>

  <body
    class="min-h-screen bg-neutral-soft text-dark-text antialiased flex flex-col"
  >
    <Header />

    <main class="flex-grow">
      <slot />
    </main>

    {/* FIXED 'ESCAPE' BUTTON - Top Right, Floating Pill */}
    <button
      id="quick-exit-button"
      class="fixed top-4 right-4 z-[9999] bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded-full shadow-2xl transition-transform hover:scale-105 border-2 border-white flex items-center gap-2 group"
      aria-label="Quickly leave this site"
    >
      <span class="text-sm uppercase tracking-wider">Exit Site</span>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-4 w-4"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"
        ></path>
      </svg>
    </button>

    <Footer />

    <script is:inline>
      if (typeof window !== 'undefined') {
        const safeUrl = 'https://www.google.co.uk/';
        const exitButton = document.getElementById('quick-exit-button');

        if (exitButton) {
          const quickExit = (event) => {
            if (event) event.preventDefault();
            window.location.replace(safeUrl);
          };
          exitButton.addEventListener('click', quickExit);

          document.addEventListener('keydown', function (event) {
            if (event.key === 'Escape') {
              event.preventDefault();
              event.stopPropagation();
              quickExit();
            }
          });
        }
      }
    </script>
  </body>
</html>
