---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const {
  title = "National Debt Service",
  description = "Find free, regulated debt advice and mental health support services across the UK. Simple, independent signposting.",
  canonicalUrl,
} = Astro.props;

const siteName = "National Debt Service";
const siteUrl = "https://www.nationaldebtservice.co.uk";
---

<!DOCTYPE html>
<html lang="en-GB">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, viewport-fit=cover"
    />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="language" content="en-GB" />
    <meta name="referrer" content="strict-origin-when-cross-origin" />

    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <meta name="theme-color" content="#023047" />
    <meta name="color-scheme" content="light" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="robots" content="index,follow" />

    {description && <meta name="description" content={description} />}

    {canonicalUrl && <link rel="canonical" href={canonicalUrl} />}

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content={siteName} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalUrl || siteUrl} />
    <meta property="og:locale" content="en_GB" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
  </head>

  <body class="min-h-screen bg-neutral-soft text-dark-text antialiased">
    <Header />
    <!-- New ownership banner -->
      <div class="bg-red-50 border-b border-red-200 py-3 px-4 text-center rounded-b-lg shadow-sm">
        <p class="text-sm text-red-800 font-medium max-w-3xl mx-auto leading-snug">
          Important: <strong>NationalDebtService.co.uk</strong> is now under new ownership.  
          Weâ€™re not connected to the previous operators and we don't use sales practices that led to complaints in the past.
        </p>
      </div>
    <slot />
    <Footer />
  </body>
</html>
