---
// src/components/Header.astro
import { ShieldCheck } from 'lucide-astro';
import MobileNav from './MobileNav.jsx';

const { pathname } = Astro.url;
const isCurrent = (path: string) =>
  pathname === path || pathname === `${path}/`;
---

<a
  href="#main-content"
  class="sr-only focus:not-sr-only focus:fixed focus:top-3 focus:left-3 focus:z-50 focus:px-4 focus:py-2 focus:bg-white focus:text-primary-800 focus:rounded-md focus:shadow"
>
  Skip to main content
</a>

<header class="border-b border-primary-100 bg-white/90 backdrop-blur">
  <div
    class="mx-auto flex max-w-7xl items-center justify-between gap-4 px-4 py-3 sm:px-6 sm:py-4 md:pr-40"
  >
    <a href="/" class="flex items-center gap-3">
      <div
        class="flex h-9 w-9 items-center justify-center rounded-full bg-primary-100 text-primary-800"
        aria-hidden="true"
      >
        <ShieldCheck class="h-5 w-5" />
      </div>

      <div class="flex flex-col">
        <span
          class="text-base sm:text-lg font-bold tracking-tight text-primary-900"
          style="font-family: 'Noto Sans Display', system-ui, sans-serif;"
        >
          National Debt Service
        </span>
        <span class="text-xs sm:text-sm text-slate-600">
          Signposting to free, trusted UK support
        </span>
      </div>
    </a>

    <nav
      class="hidden items-center gap-8 text-sm md:flex"
      aria-label="Main navigation"
    >
      <a
        href="/help"
        class="text-slate-700 hover:text-primary-800 py-3 -mx-2 px-2 font-medium"
        aria-current={isCurrent('/get-help') ? 'page' : undefined}
      >
        Local Help
      </a>
      <a
        href="/resources"
        class="text-slate-700 hover:text-primary-800 py-3 -mx-2 px-2 font-medium"
        aria-current={isCurrent('/resources') ? 'page' : undefined}
      >
        Core Services
      </a>
      <a
        href="/glossary"
        class="text-slate-700 hover:text-primary-800 py-3 -mx-2 px-2 font-medium"
        aria-current={isCurrent('/glossary') ? 'page' : undefined}
      >
        Glossary
      </a>
      <a
        href="/about"
        class="text-slate-700 hover:text-primary-800 py-3 -mx-2 px-2 font-medium"
        aria-current={isCurrent('/about') ? 'page' : undefined}
      >
        About
      </a>
      <a
        href="/contact"
        class="text-slate-700 hover:text-primary-800 py-3 -mx-2 px-2 font-medium"
        aria-current={isCurrent('/contact') ? 'page' : undefined}
      >
        Contact
      </a>

      <a
        href="/get-help"
        class="btn-primary text-sm font-extrabold uppercase px-5 py-2.5 rounded-sm tracking-wider shadow-lg hover:shadow-xl transition-shadow duration-200"
        aria-current={isCurrent('/get-help') ? 'page' : undefined}
      >
        GET SUPPORT
      </a>
    </nav>

    <div class="md:hidden flex items-center gap-3">
      <a
        href="/get-help"
        class="btn-primary text-sm font-bold uppercase px-4 py-2 rounded-full tracking-wider shadow-md"
        aria-current={isCurrent('/get-help') ? 'page' : undefined}
      >
        Get Help
      </a>

      <MobileNav currentPath={pathname} client:load />
    </div>
  </div>
</header>
