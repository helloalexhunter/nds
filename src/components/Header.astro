---
import { ShieldCheck } from "lucide-astro";

const { pathname } = Astro.url;
const isCurrent = (path: string) =>
  pathname === path || pathname === `${path}/`;
---

<a
  href="#main-content"
  class="sr-only focus:not-sr-only focus:fixed focus:top-3 focus:left-3 focus:z-50 focus:px-4 focus:py-2 focus:bg-white focus:text-primary-800 focus:rounded-md focus:shadow"
>
  Skip to main content
</a>

<header class="border-b border-primary-100 bg-white/90 backdrop-blur">
  <div class="mx-auto flex max-w-5xl items-center justify-between gap-4 px-4 py-3 sm:px-6 sm:py-4">
    <a href="/" class="flex items-center gap-3">
      <div
        class="flex h-9 w-9 items-center justify-center rounded-full bg-primary-100 text-primary-800"
        aria-hidden="true"
      >
        <ShieldCheck class="h-5 w-5" />
      </div>
      <div class="flex flex-col">
        <span
          class="text-base sm:text-lg font-semibold tracking-tight"
          style="font-family: 'Noto Sans Display', system-ui, sans-serif;"
        >
          National Debt Service
        </span>
        <span class="text-xs sm:text-sm text-slate-600">
          Signposting to free, trusted UK support
        </span>
      </div>
    </a>

    <nav
      class="hidden items-center gap-5 text-sm md:flex"
      aria-label="Main navigation"
    >
      <a
        href="/get-help"
        class="text-slate-700 hover:text-primary-800 py-3 -mx-2 px-2"
        aria-current={isCurrent("/get-help") ? "page" : undefined}
      >
        Where to get help
      </a>
      <a
        href="/resources"
        class="text-slate-700 hover:text-primary-800 py-3 -mx-2 px-2"
        aria-current={isCurrent("/resources") ? "page" : undefined}
      >
        Resources
      </a>
      <a
        href="/about"
        class="text-slate-700 hover:text-primary-800 py-3 -mx-2 px-2"
        aria-current={isCurrent("/about") ? "page" : undefined}
      >
        About
      </a>
      <a
        href="/contact"
        class="text-slate-700 hover:text-primary-800 py-3 -mx-2 px-2"
        aria-current={isCurrent("/contact") ? "page" : undefined}
      >
        Contact
      </a>
      <a
        href="/get-help"
        class="btn-primary text-sm font-bold uppercase px-4 py-4"
        aria-current={isCurrent("/get-help") ? "page" : undefined}
      >
        I need support
      </a>
    </nav>
  </div>

  <div class="border-t border-primary-100 bg-white px-4 pb-3 pt-2 md:hidden">
    <div class="mx-auto max-w-5xl">
      <a
        href="/get-help"
        class="btn-primary w-full justify-center mb-2"
        aria-current={isCurrent("/get-help") ? "page" : undefined}
      >
        I need support now
      </a>
      <a
        href="/resources"
        class="btn-primary w-full justify-center"
        aria-current={isCurrent("/resources") ? "page" : undefined}
      >
        Resources
      </a>
    </div>
  </div>
</header>