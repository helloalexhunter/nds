---
// src/components/Header.astro
const navLinks = [
  { name: 'Local Help', href: '/help', type: 'primary' },
  { name: 'Agency Directory', href: '/agencies', type: 'primary' },
  { name: 'Jargon Buster', href: '/glossary', type: 'secondary' },
  { name: 'About', href: '/about', type: 'tertiary' },
];
---

<header class="bg-white border-b border-gray-200 sticky top-0 z-50">
  <div class="container mx-auto px-4 max-w-7xl">
    <div class="flex justify-between items-center h-20">
      {/* LOGO */}
      <a
        href="/"
        class="flex items-center gap-2 group focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-600 rounded-lg p-1"
      >
        <div
          class="bg-blue-900 text-white font-black text-2xl px-3 py-1 rounded-md group-hover:bg-blue-800 transition-colors"
        >
          NDS
        </div>
        <span class="text-slate-900 font-bold text-lg hidden sm:block">
          National Debt Service
        </span>
      </a>

      {/* DESKTOP NAVIGATION */}
      <nav
        class="hidden lg:flex items-center gap-8"
        aria-label="Main navigation"
      >
        <ul class="flex items-center gap-6">
          {
            navLinks.map((link) => (
              <li>
                <a
                  href={link.href}
                  class={`text-sm font-medium transition-colors duration-200 border-b-2 border-transparent py-1
                  ${
                    link.type === 'primary'
                      ? 'text-blue-700 font-bold hover:text-blue-900 hover:border-blue-600'
                      : 'text-slate-600 hover:text-blue-700 hover:border-blue-300'
                  }
                `}
                >
                  {link.name}
                </a>
              </li>
            ))
          }
        </ul>

        {/* Call to Action Button */}
        <a
          href="/get-help"
          class="btn-primary inline-flex items-center gap-2 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-600"
        >
          <span>Find Help</span>
        </a>
      </nav>

      {/* MOBILE MENU BUTTON */}
      <button
        id="mobile-menu-btn"
        class="lg:hidden p-2 text-gray-600 hover:text-gray-900 focus:outline-none focus:ring-2 focus:ring-blue-500 rounded-lg"
        aria-label="Toggle navigation menu"
        aria-expanded="false"
        aria-controls="mobile-menu"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-8 w-8"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
  </div>

  {/* MOBILE MENU */}
  <div
    id="mobile-menu"
    class="hidden lg:hidden bg-white border-t border-gray-100 absolute w-full left-0 shadow-lg"
  >
    <nav class="container mx-auto px-4 py-6" aria-label="Mobile navigation">
      <ul class="space-y-4">
        {/* Group: Tools */}
        <li>
          <span class="text-xs font-bold text-gray-400 uppercase tracking-wider"
            >Search Tools</span
          >
          <a
            href="/agencies"
            class="block mt-2 text-lg font-medium text-slate-900 hover:bg-slate-50 p-2 rounded-md -mx-2"
          >
            Who is contacting me?
            <span class="block text-sm text-gray-500 font-normal mt-0.5"
              >Search Agency Directory</span
            >
          </a>
          <a
            href="/glossary"
            class="block mt-1 text-base font-medium text-slate-800 hover:bg-slate-50 p-2 rounded-md -mx-2"
          >
            Jargon Buster
          </a>
        </li>

        {/* Group: Help */}
        <li class="pt-2 border-t border-gray-100 mt-2">
          <span class="text-xs font-bold text-gray-400 uppercase tracking-wider"
            >Support</span
          >
          <a
            href="/get-help"
            class="block mt-2 text-lg font-bold text-green-700 hover:bg-green-50 p-2 rounded-md -mx-2 flex items-center gap-2"
          >
            Find Help
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-4 w-4"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
            </svg>
          </a>
        </li>

        {/* Group: Company */}
        <li class="pt-2 border-t border-gray-100 mt-2">
          <a
            href="/about"
            class="block text-base text-gray-600 hover:text-gray-900 py-2"
            >About Us</a
          >
        </li>
      </ul>
    </nav>
  </div>

  <script>
    const menuBtn = document.getElementById('mobile-menu-btn');
    const mobileMenu = document.getElementById('mobile-menu');

    if (menuBtn && mobileMenu) {
      menuBtn.addEventListener('click', () => {
        const isExpanded = menuBtn.getAttribute('aria-expanded') === 'true';
        mobileMenu.classList.toggle('hidden');
        menuBtn.setAttribute('aria-expanded', (!isExpanded).toString());

        const svg = menuBtn.querySelector('svg');
        if (svg) {
          if (!isExpanded) {
            // Close Icon
            svg.innerHTML =
              '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />';
          } else {
            // Hamburger Icon
            svg.innerHTML =
              '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />';
          }
        }
      });
    }
  </script>
</header>
