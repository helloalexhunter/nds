---
// src/components/Footer.astro
const currentYear = new Date().getFullYear();
---

<footer
  class="bg-slate-900 text-slate-300 py-12 border-t border-slate-800 font-sans"
>
  <div class="container mx-auto px-4 max-w-7xl">
    {/* FOOTER GRID */}
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-10 mb-12">
      {/* Column 1: Brand & Mission */}
      <div class="space-y-4">
        <a
          href="/"
          class="inline-block text-white font-black text-2xl tracking-tight mb-2"
        >
          NDS
        </a>
        <p class="text-sm text-slate-400 leading-relaxed">
          Providing free, independent signposting to regulated debt advice and
          mental health support services across the UK.
        </p>
        <div class="pt-2">
          <a
            href="/contact"
            class="inline-flex items-center text-sm font-bold text-blue-400 hover:text-blue-300"
          >
            Get in touch &rarr;
          </a>
        </div>
      </div>

      {/* Column 2: Information */}
      <div>
        <h3 class="text-white font-bold uppercase tracking-wider text-sm mb-6">
          Information
        </h3>
        <ul class="space-y-3">
          <li>
            <a
              href="/help"
              class="hover:text-white hover:underline decoration-blue-500 underline-offset-4 transition-all"
            >
              Search for Local Help
            </a>
          </li>
          <li>
            <a
              href="/glossary"
              class="hover:text-white hover:underline decoration-blue-500 underline-offset-4 transition-all"
            >
              Debt Glossary
            </a>
          </li>
        </ul>
      </div>

      {/* Column 3: Directories & Tools */}
      <div>
        <h3 class="text-white font-bold uppercase tracking-wider text-sm mb-6">
          Resources
        </h3>
        <ul class="space-y-3">
          <li>
            <a
              href="/agencies"
              class="hover:text-white hover:underline decoration-blue-500 underline-offset-4 transition-all"
            >
              Agency Directory
            </a>
          </li>
          <li>
            <span
              class="text-slate-600 text-sm cursor-not-allowed"
              title="Coming Soon">Enforcement Firms</span
            >
          </li>
          <li>
            <span
              class="text-slate-600 text-sm cursor-not-allowed"
              title="Coming Soon">Budgeting Tools</span
            >
          </li>
        </ul>
      </div>

      <div>
        <h3 class="text-white font-bold uppercase tracking-wider text-sm mb-6">
          Who we are
        </h3>
        <ul class="space-y-3">
          <li>
            <a href="/about" class="hover:text-white transition-colors"
              >About Us</a
            >
          </li>
          <li>
            <a href="/contact" class="hover:text-white transition-colors"
              >Contact</a
            >
          </li>
          <li class="pt-4 border-t border-slate-800 mt-4 flex flex-col gap-2">
            <a
              href="/privacy"
              class="text-xs hover:text-white transition-colors"
              >Privacy Policy</a
            >
            <a href="/terms" class="text-xs hover:text-white transition-colors"
              >Terms of Use</a
            >
            <a
              href="/cookies"
              class="text-xs hover:text-white transition-colors"
              >Cookie Policy</a
            >
            <a
              href="/changelog"
              class="text-xs hover:text-white transition-colors"
              >Release Notes</a
            >
          </li>
        </ul>
      </div>
    </div>
  </div>

  {/* COPYRIGHT & DISCLAIMER */}
  <div class="border-t border-slate-800 pt-8 text-center md:text-left">
    <div class="flex flex-col md:flex-row justify-between items-center gap-4">
      <p class="text-xs text-slate-500">
        &copy; {currentYear} National Debt Service. All rights reserved.
      </p>
      <p class="text-xs text-slate-600 max-w-md text-center md:text-right">
        Information provided on this website is for educational purposes only
        and does not constitute financial advice.
      </p>
    </div>
  </div>
</footer>
