---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { Clock } from "lucide-astro";

const title = "National Debt Service";
---

<BaseLayout title={title}>
  <Header />

  <main class="flex flex-1 items-center justify-center px-4 py-20">
    <div class="text-center max-w-2xl mx-auto">
      <h1
        class="text-4xl sm:text-5xl font-bold mb-4 text-slate-900"
        style="font-family: 'Noto Sans Display';"
      >
        National Debt Service
      </h1>

      <p
        class="text-base sm:text-lg text-slate-600 mb-8 leading-relaxed"
        style="font-family: 'Noto Sans';"
      >
        Weâ€™re building a clear and calm information service to help people in the UK understand
        their debt options and, where appropriate, find FCA-authorised support.
      </p>

      <div class="inline-flex items-center gap-2 text-slate-700 bg-white px-4 py-2 rounded-full shadow-sm ring-1 ring-slate-200">
        <Clock class="h-4 w-4 text-slate-500" />
        <span class="text-sm font-medium" style="font-family: 'Noto Sans';">
          Full website coming soon
        </span>
      </div>
    </div>
  </main>

  <Footer slot="footer" />
</BaseLayout>
